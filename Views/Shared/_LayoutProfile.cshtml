@{
    Layout = "_Layout";
}

@inject Microsoft.AspNetCore.Identity.SignInManager<AppUser> _signInManager
@inject TracyShop.Data.AppDbContext _context
@using Microsoft.AspNetCore.Identity
@inject UserManager<AppUser> UserManager

<div class="profile">
    <div class="container bootstrap snippets bootdey">
        <div class="row">
            <div class="profile-nav col-md-3">
                <div class="card">
                    <div class="user-heading round">
                        <a href="#">

                            @if ((User.FindFirst("Avatar").Value) == "")
                            {
                                <img class="img-responsive" src="~/Client/img/default-user.jpg" alt="" />
                            }
                            else
                            {
                                <img class="img-responsive" src="@User.FindFirst("Avatar").Value" alt="">
                            }

