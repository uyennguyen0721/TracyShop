@{
    Layout = "_LayoutProfile";
    ViewData["title"] = "Reset Password";
}

<div class="card-body">
    <h1 class="card-title">Đổi mật khẩu</h1>
    <p class="card-title">Để bảo mật tài khoản, vui lòng không chia sẻ mật khẩu cho người khác</p>
</div>
<div class="card-text">
    <div class="input">
        <p>Mật khẩu hiện tại<input type="password" name="current-password" maxlength="255"  /></p>
    </div>
    <div class="input">
        <p>Mật khẩu mới<input type="password" name="new-password" maxlength="255" /></p>
    </div>
    <div class="input">
        <p>Xác nhận mật khẩu<input type="password" name="confirm-password" maxlength="255" /></p>
    </div>
    
    <div class="forgot-pass">
        <a href="#">Quên mật khẩu?</a>
    </div>
</div>
<div class="save">
    <input type="submit" class="btn custom-btn" value="Xác nhận" />
</div>
