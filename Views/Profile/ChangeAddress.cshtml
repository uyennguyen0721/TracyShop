@model TracyShop.Models.Address
@{
    Layout = "_LayoutProfile";
    ViewData["title"] = "Address";
}

<div class="card">
    <div class="card-body">
        <h1 class="card-title">Địa chỉ của tôi</h1>
        <p class="card-title">Địa chỉ giao hàng</p>
    </div>

    <form asp-action="ChangeAddress" asp-controller="Profile" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="City" class="control-label">Tỉnh / Thành phố</label>
            <select asp-for="City" name="City" class="form-select form-select-lg mb-3" required="">
                <option value="0">Chọn tỉnh/thành phố</option>
            </select>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="District" class="control-label">Quận / Huyện</label>
            <select asp-for="District" name="District" class="form-select form-select-lg mb-3">
                <option value="0">Chọn quận / huyện</option>
            </select>
            <span asp-validation-for="District" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SpecificAddress" class="control-label">Địa chỉ cụ thể</label>
            <input asp-for="SpecificAddress" class="form-control" type="text" />
            <span asp-validation-for="SpecificAddress" class="text-danger"></span>
        </div>
        <div class="form-group save">
            <input type="submit" value="Lưu địa chỉ" class="btn custom-btn" />
        </div>

        @if (ViewBag.Message != null)
        {
            @if (ViewBag.Message == true)
            {
                <script type="text/javascript">
                    window.onload = function () {
                        alert("Update User's Address successed.");
                    };
                </script>
            }
            else
            {
                <script type="text/javascript">
                    window.onload = function () {
                        alert("Update User's Address failed.");
                    };
                </script>
            }
        }

    </form>
</div>
