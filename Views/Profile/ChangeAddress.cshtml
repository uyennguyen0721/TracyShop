@model TracyShop.ViewModels.ChangeAddressModel
@{
    Layout = "_LayoutProfile";
    ViewData["title"] = "Address";
}

<div class="card-body">
    <h1 class="card-title">Địa chỉ của tôi</h1>
    <p class="card-title">Địa chỉ giao hàng</p>
</div>

<form asp-action="ChangeAddress">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="SelectCity" class="control-label">Tỉnh / Thành phố</label>
        <select asp-for="SelectCity" class="form-select form-select-lg mb-3" name="SelectCity" required="">
            <option value="">Chọn tỉnh/thành phố</option>
        </select>
        <span asp-validation-for="SelectCity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SelectDistrict" class="control-label">Quận / Huyện</label>
        <select asp-for="SelectDistrict" class="form-select form-select-lg mb-3" name="SelectDistrict" required="">
            <option value="">Chọn quận / huyện</option>
        </select>
        <span asp-validation-for="SelectDistrict" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SpecificAddress" class="control-label">Địa chỉ cụ thể</label>
        <input asp-for="SpecificAddress" class="form-control" type="text" />
        <span asp-validation-for="SpecificAddress" class="text-danger"></span>
    </div>
    <div class="form-group save">
        <input type="submit" value="Lưu địa chỉ" class="btn custom-btn" />
    </div>
</form>

