@{
    Layout = "_LayoutProfile";
    ViewData["title"] = "Address";
}

<div class="card-body">
    <h1 class="card-title">Địa chỉ của tôi</h1>
    <p class="card-title">Địa chỉ giao hàng</p>
</div>

<form asp-action="ChangePassword">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="control-label">Tỉnh / Thành phố</label>
        <select class="form-select form-select-lg mb-3" name="calc_shipping_provinces" required="">
            <option value="">Chọn tỉnh/thành phố</option>
        </select>
        <span class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Quận / Huyện</label>
        <select class="form-select form-select-lg mb-3" name="calc_shipping_district" required="">
            <option value="">Chọn quận / huyện</option>
        </select>
        <span class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Địa chỉ cụ thể</label>
        <input class="form-control" type="text" />
        <span class="text-danger"></span>
    </div>
    <div class="form-group save">
        <input type="submit" value="Lưu địa chỉ" class="btn custom-btn" />
    </div>
</form>
