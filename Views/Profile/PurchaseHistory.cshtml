                                <div class="col-md-6 col-xs-6 text-right text-uppercase text-danger"><b>@status</b></div>
                            }
                            else
                            {
                                <div class="col-md-6 col-xs-6 text-right text-uppercase text-success"><b>@status</b></div>
                            }
