        <button class="btn nav-link" id="waiting-get-tab" data-bs-toggle="tab" data-bs-target="#get" type="button" role="tab" aria-controls="get" aria-selected="false"><b>Chờ lấy hàng</b></button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="btn nav-link" id="delivering-tab" data-bs-toggle="tab" data-bs-target="#delivering" type="button" role="tab" aria-controls="delivering" aria-selected="false"><b>Đang giao</b></button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="btn nav-link" id="received-tab" data-bs-toggle="tab" data-bs-target="#received" type="button" role="tab" aria-controls="received" aria-selected="false"><b>Đã giao</b></button>
