                                        <h5>@_context.Product.Where(p => p.Id == detail.ProductId).First().Name</h5>
                                        <p>Phân loại hàng: @_context.Sizes.Where(s => s.Id == detail.SelectedSize).First().Name</p>
                                        <p>x @detail.Quantity</p>
                                    </div>
                                </div>
                            </th>
                            <th>
                                <div class="unit-price">
                                    @if (detail.Promotion != 0)
                                    {
                                        <div class="unit-price-origin" style="font-size: 12px; text-decoration: line-through;">@String.Format("{0:0,0}", (detail.Price / (1 - detail.Promotion))) VNĐ</div>
