@model TracyShop.Models.Cart
@{
    ViewData["Title"] = "Update Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Page Header Start -->
<div class="cart-header mb-0">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="wow fadeInDown" data-wow-delay="0.5s">Giỏ hàng</h2>
            </div>
            <div class="col-12 wow fadeInUp" data-wow-delay="0.5s">
                <a asp-controller="Home" asp-action="Index">Home</a>
                <a asp-controller="Product" asp-action="Product">My Cart</a>
            </div>
        </div>
    </div>
</div>
<!-- Page Header End -->
<div class="row" style="margin-top: 5%;">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-action="UpdateCart" asp-route-id="@Model.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="SelectedSize" class="control-label">Chọn size</label>
                <select asp-for="SelectedSize" asp-items="@ViewBag.Sizes" class="form-control">
                    <option value="0">Chọn size</option>
                </select>
                <span asp-validation-for="SelectedSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label">Số lượng</label>
                <input asp-for="Quantity" type="number" min="1" max="50" class="form-control">
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-block">Cập nhật</button>
            </div>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>

