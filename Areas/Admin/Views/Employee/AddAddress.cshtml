@model TracyShop.Models.Address
@{
    ViewData["Title"] = "Address";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Địa chỉ nhân viên</h1>
    <a asp-area="Admin" asp-controller="Employee" asp-action="Index" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-arrow-alt-circle-left text-white-50"></i> Quay lại
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAddress" asp-controller="Employee" asp-route-id="@ViewBag.UserId" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="City" class="control-label" style="margin-right: 5%;">Tỉnh / Thành phố</label>
                <select asp-for="City" name="City" class="form-select form-select-lg mb-3" required="">
                    <option value="0">Chọn tỉnh/thành phố</option>
                </select>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="District" class="control-label" style="margin-right: 5%;">Quận / Huyện</label>
                <select asp-for="District" name="District" class="form-select form-select-lg mb-3">
                    <option value="0">Chọn quận / huyện</option>
                </select>
                <span asp-validation-for="District" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpecificAddress" class="control-label">Địa chỉ cụ thể</label>
                <input asp-for="SpecificAddress" class="form-control" type="text" />
                <span asp-validation-for="SpecificAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu địa chỉ" class="btn btn-primary" />
            </div>

            @if (ViewBag.Message != null)
            {
                @if (ViewBag.Message == true)
                {
                    <script type="text/javascript">
                    window.onload = function () {
                        alert("Update User's Address successed.");
                    };
                    </script>
                }
                else
                {
                    <script type="text/javascript">
                    window.onload = function () {
                        alert("Update User's Address failed.");
                    };
                    </script>
                }
            }

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}