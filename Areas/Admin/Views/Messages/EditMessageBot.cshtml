@model TracyShop.Models.Message

@{
    ViewData["Title"] = "Edit MessageBot";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Chỉnh sửa thông tin MessageBot</h1>
    <a asp-area="Admin" asp-controller="Messages" asp-action="Index" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-arrow-alt-circle-left text-white-50"></i> Quay lại
    </a>
</div>
<form asp-action="EditMessageBot" asp-controller="Messages" asp-area="Admin" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="RequestMessage" class="control-label">Request Message</label>
                <input asp-for="RequestMessage" class="form-control" />
                <span asp-validation-for="RequestMessage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResponseMessage" class="control-label">Response Message</label>
                <textarea asp-for="ResponseMessage" class="form-control" rows="5"></textarea>
                <span asp-validation-for="ResponseMessage" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
    </div>
</form>

