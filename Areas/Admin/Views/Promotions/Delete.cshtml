@model TracyShop.Models.Promotion

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Xóa khuyến mãi</h1>
</div>

<h4 class="text-danger">Bạn chắc chắn muốn xóa khuyến mãi này?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Mức giảm giá
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.percent)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> &nbsp
        <a asp-area="Admin" asp-controller="Promotions" asp-action="Index" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-arrow-alt-circle-left text-white-50"></i> Quay lại
        </a>
    </form>
</div>
