@model TracyShop.ViewModels.ProductSizeModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Thêm size</h1>
    <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-arrow-alt-circle-left text-white-50"></i> Quay lại
    </a>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SelectedPro" class="control-label">Chọn sản phẩm</label>
                <select asp-for="SelectedPro" class="form-control" asp-items="@(new SelectList(Model.Products, "Id", "Name"))">
                    <option value="0">Chọn sản phẩm</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="SelectedSize" class="control-label">Chọn size</label>
                <select asp-for="SelectedSize" class="form-control" asp-items="@(new SelectList(Model.Sizes, "Id", "Name"))">
                    <option value="0">Chọn size</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

