@model IEnumerable<TracyShop.Models.Product>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@inject TracyShop.Data.AppDbContext _context

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Danh sách sản phẩm</h1>
    <form asp-controller="Products" asp-action="Search" method="get">
        <p>
            <input type="search" placeholder="Tìm kiếm ..." value="@ViewData["GetProduct"]" name="searchString" style="width:400px" />
            <button type="submit" class="btn btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                </svg>
            </button>
        </p>

    </form>

    @if (_context.UserRoles.Where(r => r.UserId.Contains(User.FindFirst("Id").Value)).First().RoleId == "1")
    {
        <p>
            <a asp-area="Admin" asp-controller="Products" asp-action="Create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                <i class="fas fa-plus-circle text-white-50"></i> Thêm sản phẩm mới
            </a>
        </p>
    }
</div>
<table class="table">
    <thead>
        <tr>
            <th>STT</th>
            <th>Tên sản phẩm</th>
            <th>Giá nhập</th>
            <th>Giá bán</th>
            <th>Đang kinh doanh</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                @if(_context.StockReceivedDetail.Where(p => p.ProductId == item.Id).ToList().Count != 0)
                {
                    <td>
                        @_context.StockReceivedDetail.Where(p => p.ProductId == item.Id).OrderBy(p => p.StockReceivedId).Last().Unit_price
                    </td>
                }
                else
                {
                    <td>0</td>
                }
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td>

                    @if (_context.UserRoles.Where(r => r.UserId.Contains(User.FindFirst("Id").Value)).First().RoleId == "1")
                    {
                        <a asp-area="Admin" asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
                    } |

                    <a asp-area="Admin" asp-controller="Products" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i></a> |

                    @if (_context.UserRoles.Where(r => r.UserId.Contains(User.FindFirst("Id").Value)).First().RoleId == "1")
                    {
                        <a asp-area="Admin" asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i></a>
                    } | 

                    <a asp-area="Admin" asp-controller="ProductSizes" asp-action="Index" asp-route-id="@item.Id">Xem số lượng</a> |
                    <a asp-area="Admin" asp-controller="Images" asp-action="Index" asp-route-id="@item.Id">Xem ảnh</a> |
                    <a asp-area="Admin" asp-controller="Reviews" asp-action="Index" asp-route-id="@item.Id">Xem đánh giá</a> |
                </td>
            </tr>
        }
    </tbody>
</table>
