@model IEnumerable<TracyShop.Models.Product>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@inject TracyShop.Data.AppDbContext _context

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Danh sách sản phẩm</h1>

    @if (_context.UserRoles.Where(r => r.UserId.Contains(User.FindFirst("Id").Value)).First().RoleId == "1")
    {
        <p>
            <a asp-area="Admin" asp-controller="Products" asp-action="Create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                <i class="fas fa-plus-circle text-white-50"></i> Thêm sản phẩm mới
            </a>
        </p>
    }
</div>
<table class="table">
    <thead>
        <tr>
            <th>STT</th>
            <th>Tên sản phẩm</th>
            <th>Giá nhập</th>
            <th>Giá bán</th>
            <th>Đang kinh doanh</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;

            foreach (var item in Model)
            {

                <tr>
                    <td>
                        @(++i)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    @if (_context.StockReceivedDetail.Where(p => p.ProductId == item.Id).ToList().Count != 0)
                    {
                        <td>
                            @String.Format("{0:0,0}", _context.StockReceivedDetail.Where(p => p.ProductId == item.Id).OrderBy(p => p.StockReceivedId).Last().Unit_price)
                        </td>
                    }
                    else
                    {
                        <td>0</td>
                    }
                    <td>
                        @String.Format("{0:0,0}", item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Active)
                    </td>
                    <td>

                        @if (_context.UserRoles.Where(r => r.UserId.Contains(User.FindFirst("Id").Value)).First().RoleId == "1")
                        {
                            <a asp-area="Admin" asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
                        } |

                        <a asp-area="Admin" asp-controller="Products" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i></a> |

                        @if (_context.UserRoles.Where(r => r.UserId.Contains(User.FindFirst("Id").Value)).First().RoleId == "1")
                        {
                            <button data-id="@item.Id" class="btn deletePro" type="button"> <i class="far fa-trash-alt"></i></button>
                        } |

                        <a asp-area="Admin" asp-controller="ProductSizes" asp-action="Index" asp-route-id="@item.Id">Xem số lượng</a> |
                        <a asp-area="Admin" asp-controller="Images" asp-action="Index" asp-route-id="@item.Id">Xem ảnh</a> |
                        <a asp-area="Admin" asp-controller="Reviews" asp-action="Index" asp-route-id="@item.Id">Xem đánh giá</a> |
                    </td>
                </tr>
            }
        }

    </tbody>
</table>

<form id="deletePro" asp-action="Delete">
    <input type="hidden" id="proId" name="Id" />
</form>

@section Scripts{
    <script>
        $(function(){
            $('.deletePro').click(function(e) {
                swal({
                    title: "Bạn chắc chắn?",
                    text: "Bạn chắc chắn muốn xóa sản phẩm này?",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true
                }).then((confirm) => {
                        if(confirm){
                            var btn = $(this);
                            var id = btn.data("id");
                            $('#proId').val(id);
                            $('#deletePro').submit();
                        }
                    });
            });
        });
    </script>
}
